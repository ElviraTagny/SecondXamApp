<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="SecondXamApp.MenuPage"
    Title="Menu"
    BackgroundColor="Aqua">
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Name="MenuSettings" Order="Primary" Text="Settings" Priority="0" />
    </ContentPage.ToolbarItems>-->

    <StackLayout
        HorizontalOptions="Fill"
        VerticalOptions="Fill" >
        <Button 
            VerticalOptions="Start"
            HorizontalOptions="Start"
            TextColor="Blue"
            Text="Retour"
            Clicked="BackPressed"
            BackgroundColor="Transparent"
            x:Name="BackBtn"
        />
        <StackLayout
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            WidthRequest="250">
            <Button 
                Text="Découvrir Munabees"
                BackgroundColor="Blue"
                TextColor="White"
                BorderRadius="10"
                Clicked="MunabeesBtnClicked"
                x:Name="MunaBtn"
                />
            <Button 
                Text="Découvrir O.S.E.R. L'Afrique"
                BackgroundColor="Green"
                TextColor="White"
                BorderRadius="10"
                Clicked="OserBtnClicked"
                x:Name="OserBtn"
            />
            <Button 
                Text="Découvrir African Art Everywhere"
                BackgroundColor="Purple"
                TextColor="White"
                BorderRadius="10"
                Clicked="AAEClicked"
                x:Name="AAEBtn"
                />
            <Button 
                Text="Afficher une liste"
                BackgroundColor="Gray"
                TextColor="White"
                BorderRadius="10"
                Clicked="ListBtnPressed"
                x:Name="ListBtn"
                />
        </StackLayout>
    </StackLayout>
</ContentPage>